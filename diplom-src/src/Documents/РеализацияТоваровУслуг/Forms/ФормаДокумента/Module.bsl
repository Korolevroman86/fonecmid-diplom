&НаКлиенте
Процедура РассчитатьСуммуСтроки(ТекущиеДанные)
	
	ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество;
	
	РассчитатьСуммуДокумента();
	
КонецПроцедуры

&НаКлиенте
Процедура РассчитатьСуммуДокумента()
	
	Объект.СуммаДокумента = Объект.Товары.Итог("Сумма") + Объект.Услуги.Итог("Сумма");
	
КонецПроцедуры

//Обработчик действия команды
&НаКлиенте
Процедура ВКМ_Заполнить(Команда)
	
	Если Не ЗначениеЗаполнено(Объект.Договор)Тогда
	ОбщегоНазначенияКлиент.СообщитьПользователю("Необходимо заполнить договор для заполнения документа",,"Договор","Договор");
	Возврат
	КонецЕсли;
	
	ВКМ_ЗаполнитьНаСервере();	
КонецПроцедуры 

//Проверяет вид договора и вызывает процедуру модуля объекта
&НаСервере
Процедура ВКМ_ЗаполнитьНаСервере()
	
	РеквизитыДоговора = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(Объект.Договор,"ВидДоговора, ВКМ_ДатаНачалаДействияДоговора, ВКМ_ДатаОкончанияДействияДоговора");

	Если РеквизитыДоговора.ВидДоговора <> Перечисления.ВидыДоговоровКонтрагентов.ВКМ_АбонетскоеОбслуживание Тогда
		Возврат
	КонецЕсли;
	Если РеквизитыДоговора.ВКМ_ДатаНачалаДействияДоговора <= Объект.Дата и РеквизитыДоговора.ВКМ_ДатаОкончанияДействияДоговора >= Объект.Дата Тогда	
    ОбъектДок = РеквизитФормыВЗначение("Объект");
    ОбъектДок.ВКМ_ВыполнитьЗаполнение();
    ЗначениеВДанныеФормы(ОбъектДок, Объект);
	Иначе
		ТекстСообщения = СтрШаблон("Дата документа не попадает в период действия договора! Начало действия выбранного договора %1, конец действия %2. Заключите новый договор или измените дату документа!", Формат(РеквизитыДоговора.ВКМ_ДатаНачалаДействияДоговора, "ДФ=dd.MM.yy"), Формат(РеквизитыДоговора.ВКМ_ДатаОкончанияДействияДоговора, "ДФ=dd.MM.yy"));
		ОбщегоНазначения.СообщитьПользователю(ТекстСообщения);
		Возврат
	КонецЕсли;
	
   
КонецПроцедуры 

